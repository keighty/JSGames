<!DOCTYPE html>
  <head>
    <link rel="stylesheet" href="/vendor/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="/custom/mastermindstyles.css">

    <script src="/vendor/js/jquery-1-10-1.js"></script>
    <script src="/vendor/js/jquery.validate.js"></script>
    <script src="/custom/mastermindscripts.js"></script>
  </head>
  <body>

    <div class="hero-unit">
      <h1>Mastermind</h1>
      <%= erb :_mastermindDesc  %>
      <button id="play" class="btn btn-large btn-primary">Start Game</button>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2 offset1">
          <form class="form-horizontal game_outline">
            <!-- Form Name -->
            <legend>Crack the code</legend>
            <h3 class="secret_code">XXXXX</h3>
            <!-- Text input-->
            <div>
              <input id="guess_text" name="guess_text" type="text" placeholder="5 digits" class="input-medium">
            </div>
            <!-- Button -->
            <div>
              <button id="guess" name="submit" class="btn btn-default">Guess</button>
            </div>
          </form>
        </div>
        <div class="span9 game_area">
          <div class="row game_outline">
            <div class='span6 guess'>
              <p>Guess</p>
            </div>
            <div class="span6 mark">
              <p>Mark</p>
            </div>
        </div>
          <!-- add guesses here -->
          <div class="row guess_row"></div>
        </div>
      </div>
    </div>
  </body>
</html>